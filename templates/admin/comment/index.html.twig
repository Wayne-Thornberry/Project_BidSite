{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Book</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td><a href="{{ path('user_show', {'id' : comment.User.id}) }}">[{{ comment.User.id }}]{{ comment.User.username }}</a></td>
                <td><a href="{{ path('book_show', {'id' : comment.Book.id}) }}">[{{ comment.Book.id }}]{{ comment.Book.name }}</a></td>
                <td>{{ comment.Text }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': comment.Book.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_comment_new') }}">Create new</a>
{% endblock %}
