{% block body %}
    <div class="container">
        <div class="card" style="width: 30rem">
            <div class="card-header">
                <h5>Comments</h5>
            </div>
            <div class="card-body">
                {% for comment in comments %}
                    <div class="card">
                        <div class="card-header">
                            <a href="{{ path('user_show', {'id' : comment.userId}) }}">{{ comment.userId }}</a> says
                        </div>
                        <div class="card-body">
                            <p>
                            {{ comment.text }}
                            </p>
                        </div>
                        <div class="card-footer">
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                    <br>
                {% else %}
                    No comments found, why not be the first?
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
