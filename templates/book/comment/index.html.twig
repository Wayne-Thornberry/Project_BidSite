{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h5>Comments</h5>
            </div>
            <div class="card-body">
                {% for comment in book.Comments %}
                    <div class="card">
                        <div class="card-header">
                            <a href="{{ path('user_show', {'id' : comment.user.id}) }}">{{ comment.user.username }}</a> says
                        </div>
                        <div class="card-body">
                            <p style="width: 30rem">
                            {{ comment.text }}
                            </p>
                        </div>
                        <div class="card-footer">
                            <p class="card-text"><small class="text-muted">Posted: {{ comment.DatePosted|date('Y/m/d g:s:a') }}</small></p>
                            {% if app.user.id == book.user.id %}
                            {{ include('book/comment/_delete_form.html.twig') }}
                            {% endif %}
                        </div>
                    </div>
                    <br>
                {% else %}
                    No comments found, why not be the first?
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
