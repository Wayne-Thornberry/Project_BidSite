{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SubmitterName</th>
                <th>SubmitterId</th>
                <th>Author</th>
                <th>Price</th>
                <th>ISPN</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td><a href="{{ path('book_show', {'id': book.id}) }}">{{ book.Name }}</a></td>
                <td>{{ book.SubmitterName }}</td>
                <td>{{ book.SubmitterId }}</td>
                <td>{{ book.Author }}</td>
                <td>{{ book.Price }}</td>
                <td>{{ book.ISPN }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
