{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
        <h1>Books</h1>

        {% for row in books|batch(4) %}
            <div class="row">
                {% for book in books %}
                    <div class="card">
                        <img class="card-img-top" src="https://images-na.ssl-images-amazon.com/images/I/416KGdCgQnL._SX331_BO1,204,203,200_.jpg" alt="Card image cap">
                        <h3 class="card-header">{{ book.Name }} By {{ book.Author }}</h3>
                        <div class="card-body">
                            <p class="card-text">
                            <hr>
                            Current Bid: â‚¬{{ book.Price }}
                            </p>
                            <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-primary">View Book</a>
                        </div>
                        <div class="card-footer">
                            Submitted By: <a href="{{ path('user_show', {'id': book.SubmitterId}) }}">{{ book.SubmitterName }}</a>
                        </div>
                    </div>
                {% else %}
                    no records found
                {% endfor %}
            </div>
        {% endfor %}

    {% if is_granted('ROLE_USER') %}
    <a href="{{ path('book_new') }}">Create new</a>
    {% endif %}
{% endblock %}
