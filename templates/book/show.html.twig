{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <img src="https://images-na.ssl-images-amazon.com/images/I/416KGdCgQnL._SX331_BO1,204,203,200_.jpg" class="card-img-top" alt="Responsive image">
                    </div>
                </div>
                <div class="col">
                    <div class="card-header">
                        <h4>Current Bid: â‚¬{{ bids[0].Price }}</h4>
                    </div>
                    <div class="card-body">
                    Last Bidder: <a href="{{ path('user_show', {'id' : bids[0].userid}) }}">{{ bids[0].userid }}</a><br>
                    </div>
                    <div class="card-footer">
                        {{ include('book/bid/new.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-subtitle mb-2 ">{{ book.Name }} By <a href="#">{{ book.Author }}</a></h4>
                </div>
                <div class="card-body">
                    {% if is_granted('ROLE_USER')  %}
                        {% if app.user.id == book.SubmitterId %}
                            <div class="btn-group">
                                <form action="{{ path('book_edit', {'id': book.id}) }}">
                                    <button type="submit" class="btn btn-primary" value="Go to Google">Edit</button>
                                </form>
                                {{ include('book/_delete_form.html.twig') }}
                            </div>
                        {% endif %}
                    {% endif %}
                    <p>
                        Author: {{ book.Author }}<br>
                        ISPN: {{ book.ISPN }}<br>
                    </p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>

                <div class="card-footer">
                    Submitted By: <a href="{{ path('user_show', {'id' : book.submitterid}) }}">{{ book.SubmitterId }}</a>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="row">
            <div class="col">
                {{ include('book/comment/index.html.twig') }}
                {% if is_granted('ROLE_USER')  %}
                {{ include('book/comment/new.html.twig') }}
            </div>
            <div class="col">
                {{ include('book/bid/index.html.twig') }}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
