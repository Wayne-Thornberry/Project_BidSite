{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.Name }}</td>
            </tr>
            <tr>
                <th>SubmitterName</th>
                <td>{{ book.SubmitterName }}</td>
            </tr>
            <tr>
                <th>SubmitterId</th>
                <td>{{ book.SubmitterId }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.Author }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ book.Price }}</td>
            </tr>
            <tr>
                <th>ISPN</th>
                <td>{{ book.ISPN }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_USER')  %}
        {% if app.user.id == book.SubmitterId %}
            <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
            {{ include('book/_delete_form.html.twig') }}
        {% endif %}

        {{ include('bid/index.html.twig') }}
        {{ include('bid/new.html.twig') }}
    {% endif %}
{% endblock %}
